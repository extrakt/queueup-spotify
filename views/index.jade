extends layout

block content 
    #background(style="background-image: url('" + albumArt + "')")
    
    #playlist_listing
      each playlist in playlists
        a.list_item(href="/playlist/" + playlist._id + "/" + playlist.key)
          .list_item_image
            if playlist.current && playlist.current.album.images.length > 0
              img(src=playlist.current.album.images.pop().url height=64 width=64)
          .list_item_title
            | #{playlist.name} 
            if playlist.play
              .playlist_listing_status Playing
          .list_item_desc
            if playlist.current
              | #{playlist.current.name} by #{playlist.current.artists[0].name}
      a.list_item(href="/user")
        .list_item_image
        .list_item_title.center Create New Playlist
    
    .footwrap
      a(href="http://louiswilliams.org" target="_blank") Louis Williams
      span  2015
